{
  "name": "byebye-website",
  "version": "1.0.0",
  "author": "ByeBye-Sama",
  "description": "Personal website",
  "main": "index.js",
  "scripts": {
    "dev": "node server",
    "build": "next build",
    "export": "next export",
    "start": "next start",
    "storybook": "start-storybook",
    "storybook:build": "build-storybook",
    "storybook:deploy": "surge ./storybook-static -d https://$CIRCLE_PROJECT_REPONAME-$CIRCLE_BRANCH.surge.sh",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "chromatic": "chromatic --project-token=$CHROMATIC_TOKEN --exit-zero-on-changes",
    "chromatic:ci": "chromatic --project-token=$CHROMATIC_TOKEN --exit-zero-on-changes --auto-accept-changes",
    "build-storybook": "build-storybook"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "babel-loader": "^8.1.0",
    "final-form": "^4.18.7",
    "global": "^4.4.0",
    "lodash": "^4.17.15",
    "next": "^9.2.1",
    "polished": "^3.6.3",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-final-form": "^6.3.5",
    "react-is": "^16.13.1",
    "react-kawaii": "^0.16.0",
    "react-loadingg": "^1.7.2",
    "styled-components": "^5.0.1",
    "styled-reset": "^4.1.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.3.12",
    "@storybook/addon-backgrounds": "^5.3.18",
    "@storybook/addon-docs": "^5.3.18",
    "@storybook/addon-knobs": "^5.3.12",
    "@storybook/addon-viewport": "^5.3.18",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^5.3.12",
    "@storybook/theming": "^5.3.12",
    "@types/node": "^14.0.5",
    "@types/styled-components": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-styled-components": "^1.10.7",
    "chromatic": "^4.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "fork-ts-checker-webpack-plugin": "^4.1.5",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "surge": "^0.21.3",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --ext .js,.ts,.tsx --fix"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "react/self-closing-comp": "error",
      "no-var": "error"
    },
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
